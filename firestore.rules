rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // 1. Allow anyone to register (create) and anyone to view (read)
      // 2. This rule NEVER expires, so your site won't break on March 25th.
      allow read, create: if true;

      // 3. BLOCK anyone from updating or deleting data from the website.
      // You can still delete records manually in the Firebase Console.
      allow update, delete: if false;
    }
  }
}
